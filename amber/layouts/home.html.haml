!!!
%html{:lang => @locals[:locale].to_s}
  %head
    %title
      = @page.nav_title + ' - ' + @site.title
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(charset="UTF-8")
    = render 'layouts/meta', description: @page.props.summary
    %link(rel="stylesheet" href="/assets/bootstrap.min.css")
    %link(rel="stylesheet" href="/assets/font-awesome-4.6.3/css/font-awesome.min.css")
    %link(rel="stylesheet" href="/assets/style.css")
    %link(rel="icon" href="/assets/images/favicon.png" type="image/x-icon")
    = html_head_base
  %body.home
    #wrap
      #masthead
        = render 'layouts/masthead'
      #main.container
        .row
          .col-sm-12
            .shadow-box
              .title-box
                .logo
                  .summary
                    = @page.props.summary
              .content-box
                .row
                  .col-sm-8
                    .locale-links
                      - available_languages.each do |name, code, url|
                        %a.label{:href => url, :class => (I18n.locale == code ? 'label-primary' : '')}= name
                    <br>
                    = render 'common/home_donate'
                    = yield :content
                  .col-sm-4
                    .feed
                      %h2= t(:system_updates)
                      = render 'common/news_feed'
    #footer
      = render 'layouts/footer'
